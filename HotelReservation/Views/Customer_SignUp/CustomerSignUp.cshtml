@model HotelReservation.Models.CUSTOMER_PROFILE

@{
    ViewBag.Title = "CustomerSignUp";
}

@if (ViewBag.Message != null)
{
    <h3 style="color:red;">@ViewBag.Message</h3>
}

<div class="span12" id="content">
    <hr />
    <div class="row-fluid">
        <div class="span12">
            <h2> Become Our Member ... </h2>
        </div>
    </div>
    <hr />
</div>
<div class="row-fluid">
    <div class="span9">
        <div class="row-fluid">
            <!-- block -->
            <div class="block">
                <div class="navbar navbar-inner block-header" style="padding-top: 10px;">
                    <i class="icon-align-justify"></i>&nbsp; <h3>Sign Up</h3>

                </div>
                <div class="block-content collapse in">
                    <div class="span12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <br />
                                <div class="control-group">
                                    <label class="control-label">First Name<span class="required">*</span></label>
                                    <div class="controls">
                                        @*<input name="FirstName" value="@Model.FIRST_NAME" class="input-xlarge" type="text" placeholder="FirstName" />*@
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.FIRST_NAME, new { @class = "control-label col-md-2" })
                                            @Html.ValidationMessageFor(model => model.FIRST_NAME)
                                        </div>
                                    </div>

                                </div>

                                <div class="control-group">
                                    <label class="control-label">Last Name<span class="required">*</span></label>
                                    <div class="controls">
                                        @*<input name="LastName" value="@Model.LAST_NAME" class="input-xlarge" type="text" placeholder="LastName" />*@
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.LAST_NAME)
                                            @Html.ValidationMessageFor(model => model.LAST_NAME)
                                        </div>
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Email<span class="required">*</span></label>
                                    <div class="controls">
                                        <input name="Email" value="@Model.EMAIL" class="input-xlarge" type="email" placeholder="" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Address<span class="required">*</span></label>
                                    <div class="controls">
                                        <input name="Address" value="@Model.ADDRESS" class="input-xlarge" type="text" placeholder="" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Phone<span class="required">*</span></label>
                                    <div class="controls">
                                        @*<input name="Phone" value="@Model.PHONE_NO" class="input-large" type="text" placeholder="Phone" />*@
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.PHONE_NO)
                                            @Html.ValidationMessageFor(model => model.PHONE_NO)
                                        </div>
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Gender<span class="required">*</span></label>
                                    <div class="controls">
                                        <input name="Gender" value="@Model.GENDER" class="input-xlarge" type="text" placeholder="" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Password<span class="required">*</span></label>
                                    <div class="controls">
                                        <input name="Password" value="@Model.PASSWORD" class="input-xlarge" type="password" placeholder="" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Confirm Password<span class="required">*</span></label>
                                    <div class="controls">
                                        <input name="ConfirmPassword" value="@Model.CONFIRMPASSWORD" class="input-xlarge" type="password" placeholder="" />
                                    </div>
                                </div>

                                <br />

                                <div class="span3">
                                    <p class="control-label"><span class="required">*</span> Required Fields</p>
                                </div>
                                <br />

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <a href="/Home/Index" class="btn ">Cancel</a>
                                </div>
                            </div>

                        }



                    </div>

                </div>
            </div>
            <!-- /block -->
        </div>

    </div>
    <div class="span3">
    </div>
</div>

<div>

    @Html.ActionLink("Back to List", "Index")

</div>

@section Scripts {
    Scripts.Render("~/bundles/jqueryval")
}