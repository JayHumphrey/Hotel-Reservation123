@model HotelReservation.Models.CUSTOMER_PROFILE

@{
    ViewBag.Title = "customerLogin";
}
<div class="row-fluid">
    <div class="span12" id="content">
        <hr />
        <div class="row-fluid">
            <div class="span3">
            </div>
            <div class="span5">
                <h2 align="middle"> Customer Profile LogIn </h2>
            </div>
            <div class="span5">
                @if (ViewBag.Message != null)
                {
                    <h3 align="middle" style="color:green;">@ViewBag.Message</h3>
                }
            </div>
        </div>
        <hr />
    </div>

    <div class="row-fluid">
        <div class="span2">
        </div>
        <div class="span9">
            <div class="row-fluid">
                <!-- block -->
                <div class="block">
                    <div class="navbar navbar-inner block-header">
                        <h3>LogIn Into Your Profile....</h3>
                    </div>
                    <div class="block-content collapse in">
                        <div class="span12">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-horizontal">
                                    <br />
                                    <br />
                                    <br />
                                    
                                    <div class="control-group">
                                        <label class="control-label">Email<span class="required">*</span></label>
                                        <div class="controls">
                                            <input name="Email" value="@Model.EMAIL" class="input-xlarge" type="email" placeholder="Email" />
                                        </div>
                                    </div>                                  

                                    <div class="control-group">
                                        <label class="control-label">Password<span class="required">*</span></label>
                                        <div class="controls">
                                            <input name="Password" value="@Model.PASSWORD" class="input-xlarge" type="password" placeholder="Password" />
                                        </div>
                                    </div>

                                    <br>
                                    </br>

                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary">LogIn</button>
                                        <a href="/Index/Home" class="btn ">Cancel</a>
                                    </div>



                                </div>

                            }
                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>

        </div>
        <div class="span3">
        </div>
    </div>
</div>

